<?php

$input = file_get_contents('thirdinput.txt');

$x = 0;
$y = 0;
$coord = array();
//echo coordinate($input[1]);

for ($i=0; $i < strlen($input); $i++) {
	$z = $input[$i];
	if (isset($coord[coordinate($z)]) === false) {
		$coord[coordinate($z)] = 1;
	}
}
echo count($coord);

function coordinate($z) {
	switch ($z) {
		case '<':
			$GLOBALS['y']--;
			break;
		case '>':
			$GLOBALS['y']++;
			break;
		case 'v':
			$GLOBALS['x']--;
			break;
		default:
			$GLOBALS['x']++;
			break;
	}
	return $GLOBALS['x'] . '.' . $GLOBALS['y'];
}
